{
    "name": "appflow-ui",
    "version": "0.1.0",
    "description": "Interface utilisateur pour AppFlow - Gestionnaire intelligent d'applications",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
        "dev:react": "cross-env BROWSER=none npm run start --prefix src",
        "dev:electron": "wait-on http://localhost:3000 && electron .",
        "build": "npm run build --prefix src && electron-builder",
        "build:win": "npm run build --prefix src && electron-builder --win",
        "build:mac": "npm run build --prefix src && electron-builder --mac",
        "build:linux": "npm run build --prefix src && electron-builder --linux",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "author": "AppFlow Team",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.27.2",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.4.8",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "@mantine/core": "^5.5.5",
        "@mantine/hooks": "^5.5.5",
        "@mantine/notifications": "^5.5.5",
        "chart.js": "^3.9.1",
        "moment": "^2.29.4",
        "react-chartjs-2": "^4.3.1",
        "react-router-dom": "^6.4.2",
        "tabler-icons-react": "^1.55.0"
    },
    "devDependencies": {
        "concurrently": "^7.5.0",
        "cross-env": "^7.0.3",
        "electron": "^21.3.0",
        "electron-builder": "^23.0.3",
        "wait-on": "^6.0.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^27.5.2",
        "@types/node": "^18.11.0",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "typescript": "^4.8.4"
    },
    "build": {
        "appId": "com.appflow.app",
        "productName": "AppFlow",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "main.js",
            "preload.js"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility",
            "icon": "assets/icon.png"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}